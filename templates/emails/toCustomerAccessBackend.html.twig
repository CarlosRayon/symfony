{% trans_default_domain 'email' %}

<div style="margin: 0 auto;">
    <h1>{{'toCustomerAccessBackend.hello'|trans}}
        {{budget.user}}</h1>

    <p>{{'toCustomerAccessBackend.intro'|trans}}</p>


    <table class="table">
        <thead>
            <tr>
                <th scope="col">{{'toCustomerAccessBackend.table.name'|trans}}</th>
                <th scope="col">{{'toCustomerAccessBackend.table.description'|trans}}</th>
                <th scope="col">{{'toCustomerAccessBackend.table.price'|trans}}</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <th>{{budget.product.name}}</th>
                <th>{{budget.product.description}}</th>
                <th>{{budget.product.price}}</th>
            </tr>

            {% for productCharacteristic in budget.productCharacteristics %}
                <tr>
                    <td>{{productCharacteristic.name}}</td>
                    <td>{{productCharacteristic.description}}</td>
                    <td>{{productCharacteristic.price}}</td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="2">Total</td>
                <td>{{totalPrice}}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{callToActionHref}}">{{'toCustomerAccessBackend.calltoaction'|trans}}</a>
</div>
