<!-- Image and text -->
{% trans_default_domain 'messages' %}

<header>
    <div class="container-fluid">
        <div class="row">
            <div class="col">

                <nav class="navbar navbar-expand-sm  sticky-top" style="background-color: rgba(0, 0, 0, 0.2);">

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a class="navbar-brand text-dark " href="#">{{'landing.back.header.title'|trans}}</a>
                    {% else %}
                        <a class="navbar-brand text-dark " href="#">{{'landing.front.header.title'|trans}}</a>
                    {% endif %}

                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navb" aria-expanded="true">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div id="navb" class="navbar-collapse collapse hide ">

                        <ul class="navbar-nav">
                            <li class="nav-item active ">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') == false %}
                                    <a class="nav-link  text-dark" href="{{path('landing',{'_locale': app.request.getLocale()})}}">Home</a>
                                {% endif %}
                            </li>
                        </ul>

                        <ul class="nav navbar-nav ml-auto">

                            <li class="nav-item">
                                <a class="nav-link  text-dark" href="{{path(app.request.get('_route'), {'_locale': 'es'})}}">
                                    <img src="{{asset('img/common/espana.png')}}" alt="" class="img-fluid flag">
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link  text-dark" href="{{path(app.request.get('_route'), {'_locale': 'en'})}}">
                                    <img src="{{asset('img/common/ingles.png')}}" alt="" class="img-fluid flag">
                                </a>
                            </li>

                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                                <li class="nav-item">
                                    <a class="nav-link  text-dark" href="{{path('app_logout')}}">
                                        <i class="fas fa-door-open"></i>
                                        Logout</a>
                                </li>

                            {% else %}

                                <li class="nav-item">
                                    <a class="nav-link  text-dark" href="{{path('app_login', {'_locale': app.request.getLocale()})}}">
                                        <span class="fas fa-sign-in-alt"></span>
                                        Login</a>
                                </li>

                            {% endif %}


                        </ul>


                    </div>
                </nav>


            </div>
        </div>
    </div>
</header>
