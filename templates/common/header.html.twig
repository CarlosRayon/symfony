<!-- Image and text -->

<header>
    <div class="container-fluid">
        <div class="row">
            <div class="col">

                <nav class="navbar navbar-expand-md  sticky-top" style="background-color: rgba(0, 0, 0, 0.2);">

                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a class="navbar-brand text-dark " href="#">Backend de Servicios</a>
                    {% else %}
                        <a class="navbar-brand text-dark " href="#">Proveedor de Servicios</a>
                    {% endif %}

                    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navb" aria-expanded="true">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div id="navb" class="navbar-collapse collapse hide ">

                        <ul class="navbar-nav">
                            <li class="nav-item active ">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') == false %}
                                        <a class="nav-link  text-dark" href="{{path('landing')}}">Home</a>
                                {% endif %}
                            </li>
                        </ul>

                        <ul class="nav navbar-nav ml-auto">

                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                                <li class="nav-item">
                                    <a class="nav-link  text-dark" href="{{path('app_logout')}}">
                                        <i class="fas fa-door-open"></i>
                                        Logout</a>
                                </li>

                            {% else %}

                                <li class="nav-item">
                                    <a class="nav-link  text-dark" href="{{path('app_login')}}">
                                        <span class="fas fa-sign-in-alt"></span>
                                        Login</a>
                                </li>

                            {% endif %}


                        </ul>
                    </div>
                </nav>


            </div>
        </div>
    </div>
</header>
