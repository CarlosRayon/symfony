{% extends 'front/base-front.html.twig' %}
{% trans_default_domain 'messages' %}

{% block title %}
    {{'landing.front.budget.titleweb'|trans}}
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row py-3">
            <div class="col-12">
                <h2 class="text-center">{{'landing.front.budget.titlesection'|trans}}</h2>
            </div>
        </div>

        <form action="{{path('form_budget')}}" method="post">
            {% for product in products %}
                <div class="row py-3">
                    <div class="col-6">
                        <div class="form-check">
                            <input class="form-check-input product" type="radio" name="product" id="product-{{product.id}}" value="{{product.id}}">
                            <label class="form-check-label" for="product-{{product.id}}">{{product.name}}</label>
                        </div>
                    </div>
                    <div class="col-6 characteristics" data-characteristics="product-{{product.id}}">
                        {% for characteristics in product.ProductCharacteristics %}
                            <div class="form-check" data-productid="product-{{product.id}}">
                                <input class="form-check-input checkboxes" type="checkbox" name="characteristics[]" value="{{characteristics.id}}" id="characteristics-{{characteristics.id}}">
                                <label class="form-check-label" for="characteristics-{{characteristics.id}}">
                                    {{characteristics.name}}
                                </label>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}

            <div class="row mt-3">
                <div class="col-12">
                    <h2 class="text-center">Datos del usuario</h2>
                </div>
                <div class="col-8 mx-auto">
                    <div class="form-group">
                        <label for="user-name">Name</label>
                        <input type="text" name="user-name" class="form-control" id="user-name" required>
                    </div>
                    <div class="form-group">
                        <label for="user-email">Email</label>
                        <input type="email" name="user-email" class="form-control" id="user-email" required>
                    </div>
                    <div class="form-group">
                        <label for="user-phone">Telefono
                            <label>
                                <input type="number" name="user-phone" class="form-control" id="user-phone" required>
                            </div>

                        </div>
                    </div>

                    <div class="row py-3">
                        <div class="col-12 text-center my-5">
                            <button type="submit" class="btn btn-primary btn-lg" role="button">{{'landing.front.budget.button'|trans}}</button>
                        </div>
                    </div>
                </form>
            </div>

        {% endblock %}
